<?xml version="1.0" encoding="utf-8"?>
<!--
Data Extraction Rules for Android 12+ (API 31+)
Controls what data can be extracted during device-to-device transfer
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Allow cloud backup of critical data -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        <include domain="file" path="." />

        <!-- Exclude large or regenerable data -->
        <exclude domain="file" path="photos/" />
        <exclude domain="file" path="thumbnails/" />
    </cloud-backup>

    <device-transfer>
        <!-- Allow device transfer of user data -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        <include domain="file" path="." />

        <!-- Exclude cache and photos (too large) -->
        <exclude domain="file" path="photos/" />
        <exclude domain="file" path="thumbnails/" />
        <exclude domain="cache" />
    </device-transfer>
</data-extraction-rules>
